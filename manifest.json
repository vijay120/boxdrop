{
  "manifest_version": 2,

  "name": "One-click box drop",
  "description": "Downloads PDF directly to Box account",
  "version": "1.0",

  "permissions": [
    "identity",
    "tabs",
    "http://127.0.0.1:8080/",
    "https://www.box.com/api/oauth2/authorize",
    "https://www.box.com/",
    "https://app.box.com/",
    "storage"
  ],

  "background": {
    "scripts": ["oauth.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}